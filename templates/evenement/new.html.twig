{% extends 'base-back.html.twig' %}

{% block title %}New Evenement{% endblock %}

{% block body %}
    
      <style>
@import url('https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Permanent+Marker&family=Protest+Strike&display=swap')
</style>
<style>
@import url('https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&family=Oswald:wght@200..700&family=Permanent+Marker&family=Protest+Strike&display=swap')
</style>
<style>
  .card {
    border-color: transparent; /* Replace 'your-desired-color' with the color you want */
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
          <h2  style=" color:#0c4c77; font-family: Oswald, sans-serif;
  font-optical-sizing: auto;
  font-weight: <weight>;
  font-style: normal; margin-left:150px;" text-align: center;">Add Event</h2>
            <div class="card">
                <div class="card-body">
                   
                   
                    {{ form_start(form , {'attr': {'novalidate':'novalidate'}} ) }}
                    <form class="forms-sample">
                      <div class="form-group">
                        {{ form_row(form.nameevent, {'label':' name' ,'attr':{'placeholder': 'name...', 'class':'form-control'}}) }}</div>
						<div class="form-group">
                        <div class="form-group">
                        {{ form_row(form.image, {'label':'image' ,'attr':{'placeholder': 'image...', 'class':'form-control'}}) }}</div>
                        {{ form_row(form.datedebut, {'label':'Start Date' ,'attr':{'placeholder': 'Date debut...', 'class':'form-control'}}) }}</div>
                        <div class="form-group">
                        {{ form_row(form.datefin, {'label':'End date' ,'attr':{'placeholder': 'Date fin...', 'class':'form-control'}}) }}</div>
						<div class="form-group">
                        {{ form_row(form.lieu, {'label':'place' ,'attr':{'placeholder': 'place...', 'class':'form-control'}}) }}</div>
						<div class="form-group">
                        {{ form_row(form.description, {'label':'description' ,'attr':{'placeholder': 'Description...', 'class':'form-control'}}) }}</div>
						<div class="form-group">
                        {{ form_row(form.type, {'label':'Type' ,'attr':{'placeholder': 'Type...', 'class':'form-control'}}) }}
						</div>
                        <div class="form-group">
                        {{ form_row(form.nbparticipant, {'label':'Number of participant' ,'attr':{'placeholder': '00...', 'class':'form-control'}}) }}
						</div>
                       
						<div class="form-group">
                        {{ form_row(form.Sponsor, {'label':'Sponsor' ,'attr':{'placeholder': 'Type...', 'class':'form-control'}}) }}
						</div>
                      
					 
                      <button type="submit" class="btn btn-primary mr-2" >Add event</button>

                     {{form_end(form)}} 
                    </form>

   
       </div>
            </div>
        </div>
    </div>
</div>
  





    



{% endblock %}
