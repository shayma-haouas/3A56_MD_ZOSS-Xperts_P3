{% extends 'sign/signup.html.twig' %}

{% block signup %}
<link rel="stylesheet" href="Back/style.css">
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 style="color:#433e5b">Register</h1>
    <hr class="si" >
    
   {{ form_start(registrationForm, {'id': 'registration-form'}) }}

    <div class="form-group mb-3">
        {{ form_widget(registrationForm.name, {'attr': {'class': 'form-control', 'placeholder': 'Name'}}) }}
        {{ form_errors(registrationForm.name) }}
    </div>
    <div class="form-group mb-3">
        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email address'}}) }}
        {{ form_errors(registrationForm.email) }}
    </div>
    <div class="form-group mb-3">
        {{ form_widget(registrationForm.lastname, {'attr': {'class': 'form-control', 'placeholder': 'Lastname'}}) }}
        {{ form_errors(registrationForm.lastname) }}
    </div>
    <div class="form-group mb-3">
        {{ form_widget(registrationForm.number, {'attr': {'class': 'form-control', 'placeholder': 'Number'}}) }}
        {{ form_errors(registrationForm.number) }}
    </div>
     <div class="col-md-12">
        <div class="form-group mb-4" >
             {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control form-control-xl', 'placeholder': 'Password'}}) }}
    {{ form_errors(registrationForm.plainPassword) }}
        </div>
    </div>
    <div class="form-group mb-4">
        {{ form_widget(registrationForm.roles, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(registrationForm.roles) }}
    </div>
   
    <button type="submit" class="btn btn-primary btn-block mb-4" style="background-color:#70952b ; border-color:#70952b">Sign up</button>
    {{ form_end(registrationForm) }}
    <hr>
  
   <script>
    document.getElementById('registration-form').addEventListener('submit', function () {
        // Rafraîchit la page après la soumission du formulaire
        location.reload();
    });
</script>


{% endblock %}
