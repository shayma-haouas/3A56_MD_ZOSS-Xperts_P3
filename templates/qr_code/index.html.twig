{% extends 'sign/signup.html.twig' %}

{% block signup %}
<style>
    /* Styles CSS personnalis√©s */
    .example-wrapper {
        background-color: #f8f9fa;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .title {
        text-align: center;
        color: #433e5b;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .btn-primary {
        background-color: #70952b;
        border-color: #70952b;
        font-weight: bold;
    }

    img {
        display: block;
        margin: 0 auto;
        max-width: 100%;
        height: auto;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }
</style>

<div class="example-wrapper">
    <h1 class="title">Now You Can Genarate Your Code</h1>
    <hr>

    <div class="row">
        <div class="col-md-6">
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Recherche'}}) }}
                </div>
                <hr>
                <div class="form-group">
                    {{ form_row(form.firstname, {'attr': {'class': 'form-control', 'placeholder': 'FirstName'}}) }}
                </div>
                <hr>
                <div class="form-group">
                    {{ form_row(form.lastname, {'attr': {'class': 'form-control', 'placeholder': 'LastName'}}) }}
                </div>
                <hr>
                <button type="submit" class="btn btn-primary btn-block">Recherche</button>
            {{ form_end(form) }}
        </div>
        <div class="col-md-6">
            {% if qrCode %}
                <img src="{{ qrCode }}" alt="qr-code">
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
