{% extends 'back/Base-back.html.twig' %}
{% block dashboard %}
{% block title %}Don index{% endblock %}

{% block back %}
    <h1>Don index</h1>

    <style>
        /* CSS styles for the table */
        .table {
            width: 100%;
            border-collapse: collapse;
        }

        .table th, .table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .table th {
            background-color: #f2f2f2;
        }

        /* CSS styles for the links */
        .action-links a {
            margin-right: 5px;
            text-decoration: none;
            color: blue;
        }
    </style>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Description</th>
                <th>Date_don</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for don in dons %}
            <tr>
                <td>{{ don.id }}</td>
                <td>{{ don.type }}</td>
                <td>{{ don.description }}</td>
                <td>{{ don.dateDon ? don.dateDon|date('Y-m-d') : '' }}</td>
                <td class="action-links">
                    <a href="{{ path('app_don_show', {'id': don.id}) }}">Show</a>
                    <a href="{{ path('app_don_edit', {'id': don.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_don_new') }}">Create new</a>
{% endblock %}

{% endblock %}