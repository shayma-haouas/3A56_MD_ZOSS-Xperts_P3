{% extends 'sign/signup.html.twig' %}

{% block signup %}
<!DOCTYPE html>
<!--[if lt IE 7]> <html lang="en" class="ie6 ielt8"> <![endif]-->
<!--[if IE 7]>    <html lang="en" class="ie7 ielt8"> <![endif]-->
<!--[if IE 8]>    <html lang="en" class="ie8"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
<head>
    <meta charset="utf-8">
    <title>Floreo</title>
    <link rel="stylesheet" type="text/css" href="{{ asset('Back/css/style.css') }}">
</head>
<body style="background-image: url('{{ asset('Front/img/auth.jpg') }}');">

<div class="container">
    <section id="content">
        <form method="post" action="{{ path('app_login') }}">
            <h1>Login Form</h1>
            {% block body %}
                <div>
                    <input type="text" placeholder="Email" required="" id="email" name="email" />
                </div>
                <div>
                    <input type="password" placeholder="Password" required="" id="password" name="password" />
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
            {% endblock %}
            <a><button type="submit" style="background-color:#fffff ; border-color:#70952b">Login In</button></a>
        </form>
        <a href="/forgot">Lost your password?</a>
        <a href="/register">Register</a>
    </section>
</div><!-- container -->

</body>
</html>
{% endblock %}
